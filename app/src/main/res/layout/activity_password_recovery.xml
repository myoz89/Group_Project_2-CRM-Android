<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordRecoveryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pass_recovery_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your SiteKey Challenge Question"
            android:gravity="center"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/user_answer_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
           />

        <EditText
            android:id="@+id/Sitekey_user_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Answer"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/get_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Get Password" />

        <LinearLayout
            android:id="@+id/new_password_hide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/recovery_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="New Password"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/recovery_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Confrim password"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/recovery_set_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Set New Password" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>